    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <div class="cart__container">
        <div class="step__checkout">
            <div class="step__checkout-check">Kiểm tra</div>
            <div class="step__checkout-input">Nhập thông tin đơn hàng</div>
            <div>Xong</div>
        </div>
        <div class="cart__check-container active">
            <div class="cart__check">
                {{#each listItem}}
                <div class="cart__check-items">
                    <div class="check-item">
                        <div class="check-item__image">
                            <img src={{this.path}} alt="">
                            <div class="check-item__desc">
                                <div class="check-item__desc-name">{{this.name}}</div>
                                <div class="check-item__desc-type">{{this.type}}</div>
                            </div>
                        </div>
                        <div class="check-item__quantity">
                            <i class="fas fa-plus"></i>
                            <p class="quantity">1</p>
                            <i class="fas fa-minus"></i>
                        </div>
                        <div class="check__item-price">{{this.price}}</div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="cart__check-out">
                <div class="cart__title">Tính tiền</div>
                <div class="cart__block-pay">
                    <div class="cart__price-sum">Tổng Tiền : 1000,000</div>
                    <div class="cart__price-sell">
                        <p>Nhập mã giảm giá</p>
                        <input type="text">
                    </div>
                    <div class="cart__pay">
                        <p class="cart__pay-value">Phải trả: 1000000000</p>
                        <button class="button-cart__pay">Thanh toán</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="customer__info">
            <form method="post" action="" class="form-order">
                <label for="nameUser">Họ và tên</label>
                <input type="text" name="nameUser">
                <label for="phoneNumber">Số điện thoại</label>
                <input type="text" name="phoneNumber">
                <label for="addressOrder">Địa chỉ nhận hàng</label>
                <textarea name="addressOrder" cols="50" rows="10"></textarea>
                <button type="submit">Xác nhận đặt hàng</button>
            </form>

        </div>
        <div class="done">

        </div>
    </div>
